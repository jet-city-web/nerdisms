{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "jest": true,
    "es6": true,
    "jquery": true
  },
  "globals": {
    "fail": true,
    "$": true,
    "Mustache": true,
    "Handlebars": true
  },
  "extends": [
    "eslint:recommended",
    "react-app"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-console": "off",
    "indent": [
      "error",
      2
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "semi": [
      "error",
      "always"
    ],
    "strict": "off",
    "no-restricted-globals": "off",
    "no-unused-vars": [
      1,
      {
        "vars": "local",
        "args": "none"
      }
    ]
  }
}
